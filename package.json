{
  "name": "@fluxgraph/core",
  "version": "0.1.1",
  "description": "Real-time graph-based stream processing for Cloudflare Workers and Durable Objects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "publish:patch": "npm version patch && npm publish --access public",
    "publish:minor": "npm version minor && npm publish --access public",
    "publish:major": "npm version major && npm publish --access public",
    "example:chatbot": "bun run examples/ai/chatbot-with-memory.ts",
    "example:rag": "bun run examples/ai/rag-pipeline.ts",
    "example:react": "bun run examples/ai/react-agent.ts",
    "example:multi-agent": "bun run examples/ai/multi-agent-system.ts",
    "example:tools": "bun run examples/ai/tool-calling.ts",
    "examples": "bun run examples/run-all.ts"
  },
  "keywords": [
    "fluxgraph",
    "cloudflare",
    "workers",
    "durable-objects",
    "stream-processing",
    "graph",
    "workflow",
    "real-time",
    "edge-computing",
    "event-driven",
    "reactive",
    "rxjs",
    "data-pipeline",
    "stream",
    "flow",
    "dag"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250807.0",
    "@types/bun": "latest",
    "@types/node": "^20.19.9",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stukennedy/fluxgraph"
  },
  "bugs": {
    "url": "https://github.com/stukennedy/fluxgraph/issues"
  },
  "homepage": "https://github.com/stukennedy/fluxgraph#readme",
  "publishConfig": {
    "access": "public"
  }
}
